<h1>Links</h1>

<ul>
  <% @links.each do |link| %>
    <br>
    <li><%= "#{link.link} - #{link.vote} - #{link.date}" %>
        <%= link_to "Add Comment", new_comment_path(:link_id => link.id) %>
        <%= link_to "Edit",edit_link_path(link) %>
        <%= link_to "Delete", link_path(link), :data => {:confirm => "You sure?",
        :method => "delete"} %>
    </li>
    <ul>
    <% link.comments.each do |comment| %>
      <li><%= "#{comment.comment}"%>
          <%= link_to "Delete", comment_path(comment), :data => {:confirm => "You sure?",
          :method => "delete"} %>
      </li>
    <% end %>
    </ul>
  <% end %>
</ul>

<%= link_to "New Link", new_link_path, :class=> "btn btn-success" %>
